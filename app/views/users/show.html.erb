<%= image_tag "https://kitt.lewagon.com/placeholder/users/#{@user.github}", class: 'img-circle'%>
<h1><%= @user.name %></h1>
<h2>Github: <%= @user.github %></h2>
<h3><%= @user.job %></h3>
<h3>Likes <%= @user.food %></h3>
<h3><%= link_to "Update" ,edit_user_path(@user) %></h3>
<h3><%= link_to "Delete", user_path(@user),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</h3>
