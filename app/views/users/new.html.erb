<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :github %>
    <%= f.text_field :github, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :job %>
    <%= f.text_field :job, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :food %>
    <%= f.text_field :food, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
